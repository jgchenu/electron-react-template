{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./shared/type-roots",
      "./shared/types"
    ],
    "paths": {
      "*": ["node_modules/*"],
      "$src/*": ["src/*"],
      "$shared/*": ["shared/*"],
      "$main/*": ["main/*"]
    }
  },
  "include": ["src/**/*", "main/**/*", "shared/**/*"]
}
